<form action="/admin/login" class="login" method="post">
  <h3>Vào trang admin</h3>
  <div class="login-box">
    <input name="admin_name" type="text" required />
    <label for="">Tài Khoản:</label>
  </div>
  <div class="login-box">
    <input name="admin_password" type="password" id="password" required />
    <label for="">Mật Khẩu:</label>
    <i class="fa-solid fa-eye-slash" id="checkpass"></i>
  </div>

  {{#if message}}
    <div class="error-message"> {{message}} </div>
  {{/if}}

  <div class="sm">
    <button id="sm">Đăng Nhập</button>
  </div>
</form>

<script>
  document.getElementById("checkpass").onclick = function(){
  document.getElementById("password").type = "text" 
  document.getElementById("checkpass").setAttribute("class","fa-solid fa-eye") }
</script>